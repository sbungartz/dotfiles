[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	editor = vim
[push]
	default = simple
[color]
	ui = auto
[diff]
	tool = kdiff3
[merge]
	tool = kdiff3
	conflictStyle = diff3
[mergetool "kdiff3NoAuto"]
	cmd = kdiff3 --L1 \"$MERGED (Base)\" --L2 \"$MERGED (Local)\" --L3 \"$MERGED (Remote)\" -o \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
